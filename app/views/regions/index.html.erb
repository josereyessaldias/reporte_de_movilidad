<script>
	
	window.onload = function() {
		document.getElementById("index_7").style.display = "flex"
	}
	


	function  myFunction() {
		for (var i = 0; i < 7; i++) { 
		  document.getElementById(`index_${i+1}`).style.display = "none";
		}
		

		var city = document.getElementById('city_id').value;

		for (var j = 0; j < 7; j++) { 
			if (city === `${j+1}`) {
				document.getElementById(`index_${j+1}`).style.display = "flex";
			} 
		}
		
	}

</script>
